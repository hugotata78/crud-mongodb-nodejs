<%- include('./partials/_header'); %>
<div class="container">
  <div class="row">
    <div class="col-md-5 offset-md-3">
      <div class="card">
        <div class="card-body">
          <form action="/edit/<%=task._id%>" method="POST">
            <div class="form-group">
              <input
                type="text"
                name="title"
                placeholder="Inserte un titulo"
                class="form-control m-2"
                value="<%=task.title%>"
              />
            </div>
            <div class="form-group">
              <textarea
                name="description"
                id=""
                cols="80"
                class="form-control m-2"
                placeholder="Inserte la Descripcion"
              ><%=task.description%>
                </textarea
              >
            </div>
            <button type="submit" class="btn btn-primary btn-block m-2">
              Editar Tarea
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('./partials/_footer'); %>
